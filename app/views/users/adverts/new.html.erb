<h1>Новое объявление</h1>
<%= form_for @advert,  html:{multipart: true}, url: users_adverts_path do |f| %>
  <p>Заголовок<br> <%= f.text_field :title %></p>
  <p>Цена<br/> <%= f.text_field :price %></p>
  <p> Описание объявлении <br><%= f.text_area :body %></p>
  <p> <%= f.file_field :image %></p>
  <p><%= f.submit "Опубликовать", class: "btn btn-primary" %></p>
<%end%>